	journal = {PeerJ},
	author = {Uhlir, Carolin and Schwentner, Martin and Meland, Kenneth and Kongsrud, Jon Anders and Glenner, Henrik and Brandt, Angelika and Thiel, Ralf and Svavarsson, Jörundur and Lörz, Anne-Nina and Brix, Saskia},
