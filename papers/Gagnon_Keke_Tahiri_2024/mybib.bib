@article{svavarsson_deep-sea_1993,
	title = {The {Deep}-{Sea} {Asellote} ({Isopoda}, {Crustacea}) {Fauna} of the {Northern} {Seas}: {Species} {Composition}, {Distributional} {Patterns} and {Origin}},
