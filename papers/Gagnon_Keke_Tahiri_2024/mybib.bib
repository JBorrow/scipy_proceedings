@article{etter_phylogeography_2011,
	title = {Phylogeography of a pan-{Atlantic} abyssal protobranch bivalve: implications for evolution in the {Deep} {Atlantic}},
	volume = {20},
	copyright = {© 2011 Blackwell Publishing Ltd},
	issn = {1365-294X},
